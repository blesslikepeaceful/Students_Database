<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Students_Database.ImportController">
    <children>
        <AnchorPane prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 1;">
            <children>
                <Button fx:id="grades_button" layoutX="20.0" layoutY="15.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="160.0" text="Выставить оценки" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px;" />
                <Button fx:id="import_button" layoutX="200.0" layoutY="15.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="160.0" text="Импорт студентов" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-border-radius: 5px;" />
                <Button fx:id="statistics_button" layoutX="380.0" layoutY="15.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="160.0" text="Статистика" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #FF9800; -fx-text-fill: white; -fx-border-radius: 5px;" />
            </children>
        </AnchorPane>
        <TextField fx:id="groupField" layoutX="14.0" layoutY="80.0" prefHeight="30.0" prefWidth="350.0" promptText="Введите группу" style="-fx-font-size: 14px; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;" />
        <TextArea fx:id="studentsArea" layoutX="14.0" layoutY="130.0" prefHeight="400.0" prefWidth="873.0" promptText="Фамилия Имя (списком)" style="-fx-font-size: 14px; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;" />
        <Button fx:id="save_button" layoutX="14.0" layoutY="550.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="160.0" text="Сохранить" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px;" />
    </children>
</AnchorPane>
